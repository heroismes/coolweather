<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_bar">
        <Button 
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/setting"/>
        <TextView 
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="24sp"/>
        <Button 
            android:id="@+id/refresh_weather"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/refresh"/>

    </RelativeLayout>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg">
        <TextView 
            android:id="@+id/publish_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="18sp"/>
        
        <TextView 
       		android:id="@+id/current_date"
        	android:layout_width="wrap_content"
     		android:layout_height="wrap_content"
     		android:layout_below="@id/publish_text"
     		android:layout_marginTop="20dp"
     		android:layout_centerHorizontal="true"
          	android:textColor="#fff"
          	android:textSize="18sp"
          	android:text="2016-7-15 星期五"/>	
     	
        <TextView 
            android:id="@+id/current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_date"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="60sp"
            android:text="26"/>
        <TextView 
       		android:id="@+id/weather_desp"
       		android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
           	android:layout_below="@id/current_temp"
           	android:layout_centerHorizontal="true"
          	android:textColor="#fff"
          	android:textSize="28sp"
          	android:text="多云"/>
        <TableLayout 
            android:id="@+id/weather_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            >
            <TableRow>
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"
                       android:text="昨天"/>
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"
                       android:text="今天"/>
                   <TextView 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"
                       android:text="明天"/>
                   <TextView 
                       android:id="@+id/four_day"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"/>
                   <TextView 
                       android:id="@+id/five_day"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"/>
                   <TextView 
                       android:id="@+id/six_day"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:gravity="center"
                       android:textColor="#fff"/>
            </TableRow>
            
            <TableRow>
                   <ImageView 
                       android:id="@+id/iv_yesteday"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
                   <ImageView 
                       android:id="@+id/iv_today"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
                   <ImageView 
                       android:id="@+id/iv_tommorrow"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
                   <ImageView 
                       android:id="@+id/iv_four"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
                   <ImageView 
                       android:id="@+id/iv_five"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
                   <ImageView 
                       android:id="@+id/iv_six"
                       android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:layout_weight="1"
                       android:src="@drawable/ic_launcher"/>
            </TableRow>
            <TableRow>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/yes_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/yes_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/today_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/today_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/tom_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/tom_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/four_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/four_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/five_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/five_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_weight="1">
                		<TextView 
                    android:id="@+id/six_temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="/"
                    android:textColor="#fff"/>
                
                <TextView 
                    android:id="@+id/six_temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="12sp"/>
                   </LinearLayout>
            </TableRow>
        </TableLayout>
        
        
    </RelativeLayout>
</LinearLayout>
